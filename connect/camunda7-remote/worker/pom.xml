        <artifactId>connect-camunda7-remote</artifactId>
        <version>0.3.1-SNAPSHOT</version>
    </parent>

    <dependencies>
        <!-- Miranum -->
        <dependency>
            <groupId>io.miranum.platform</groupId>
            <artifactId>connect-worker-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.miranum.platform</groupId>
            <artifactId>utils-camunda7-remote</artifactId>
            <version>${project.version}</version>
